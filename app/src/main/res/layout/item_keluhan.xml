<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/txt_keluhan"
                android:layout_marginTop="20px"
                android:text="Nama"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_keluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_nama"
                android:layout_marginStart="30px"
                android:layout_marginTop="15dp"
                android:text="Deskripsi Aduan"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txt_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_keluhan"
                android:layout_marginStart="30px"
                android:layout_marginTop="15dp"
                android:text="Tanggal"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/delete_button"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-43dp"
                android:layout_marginEnd="70dp"
                android:backgroundTint="@color/purple"
                android:src="@drawable/edit_icon" />

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_tanggal"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/red"
                android:src="@drawable/delete_icon" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>